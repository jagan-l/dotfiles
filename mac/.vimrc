" ----- Basics -----
set nocompatible
set number
set mouse=a
set showmatch
set mat=2

" ----- Indent / tabs -----
set expandtab
set shiftwidth=4
set tabstop=4
set smartindent

" ----- Search -----
set incsearch
set ignorecase
set smartcase

" ----- UX -----
set laststatus=2
set showcmd
set backspace=eol,start,indent

" ----- Syntax & filetypes -----
syntax enable
filetype plugin on
filetype indent on

" ----- Line endings -----
set ffs=unix,dos,mac

